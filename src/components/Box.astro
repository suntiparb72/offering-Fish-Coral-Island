---
interface Props {
  name: string;
  season: any;
  note: string;
  filename: string;
  weather: any;
  time: any;
  location: any;
}

const { name, season, note, filename, weather, time, location } = Astro.props;
---

<li class="link-card">
  <a>
    <span>
      <div class="fish-profile">
        <img src=`../../images/fish/${filename}` />
        <h2>
          {name}
        </h2>
      </div>

      <!-- {season.map((item) => `- ${item} `)} -->
      <!-- {season.length > 0 && <p>{season.join(", ")}</p>} -->
      <h5>{season.map((item) => <span class="badge">{item}</span>)}</h5>
      <div class="contain-p">
        
        <!-- <p>
          <b>Weather:</b> {weather}
        </p> -->
        <p><b>Weather :</b></p>
        <ul class="list">
          {weather.map((item) => <li>{item}</li>)}
        </ul>
        <p><b>Time :</b></p>
        <h5>
          {note}
        </h5>
        <ul class="list">
          {time.map((item) => <li>{item}</li>)}
        </ul>
        <p><b>Location :</b></p>
        <ul class="list">
          {location.map((item) => <li>{item}</li>)}
        </ul>
        
      </div>
    </span>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1rem - 1px);
    /* padding: 0.rem; */
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    /* font-weight: bold; */
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
  .fish-profile {
    display: flex;
    /* background: blue; */
  }

  .fish-profile > img {
    padding: 0 0.5rem;
  }

  .fish-profile > h2 {
    display: flex;
    align-items: center;
    justify-content: start;
    width: 100%;
  }

  h5 {
    margin: 0.5rem;
  }

  .badge {
    box-sizing: border-box;
    border: 2px solid green;

    font-size: 0.8rem;
    color: white;
    padding: 4px 8px;
    margin-right: 0.25rem;
    /* text-align: center; */
    border-radius: 99px;
  }
  .contain-p {
    margin: 0.75rem;
  }
  .list {
    padding-left: 1rem;
  }
</style>
